            </TextField>
            <ComboBox fx:id="cboxAccountType" layoutX="57.0" layoutY="980.0" prefHeight="38.0" prefWidth="340.0" promptText="Account Type" styleClass="field-decoration" stylesheets="@../design/design.css" />
