            <FontAwesomeIconView glyphName="ARROW_LEFT" layoutX="5.0" layoutY="19.0" onMouseClicked="#backToLogin" size="20" styleClass="backtologin-button" />
            <Label layoutX="99.0" layoutY="112.0" prefHeight="29.0" prefWidth="254.0" text="Fill the form carefully to create account">
               <font>
                  <Font name="Segoe UI" size="14.0" />
               </font>
            </Label>
            <Label layoutX="117.0" layoutY="170.0" prefHeight="29.0" prefWidth="219.0" text="Personal Information" textFill="#803d3d">
               <font>
                  <Font name="Impact" size="24.0" />
               </font>
            </Label>
            <TextField fx:id="txtName" layoutX="56.0" layoutY="225.0" prefHeight="38.0" prefWidth="340.0" promptText="Full Name" styleClass="field-decoration" stylesheets="@../design/design.css">
               <font>
                  <Font name="Arial Bold" size="20.0" />
               </font>
            </TextField>
            <TextField fx:id="txtICN" layoutX="55.0" layoutY="286.0" prefHeight="38.0" prefWidth="340.0" promptText="ID Card No" styleClass="field-decoration" stylesheets="@../design/design.css">
               <font>
                  <Font name="Arial Bold" size="20.0" />
               </font>
            </TextField>
            <TextField fx:id="txtMobileNo" layoutX="55.0" layoutY="349.0" prefHeight="38.0" prefWidth="340.0" promptText="Mobile No" styleClass="field-decoration" stylesheets="@../design/design.css">
