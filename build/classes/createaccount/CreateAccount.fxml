                  <Font name="Arial Bold" size="20.0" />
               </font>
            </TextField>
            <TextField fx:id="txtBalance" layoutX="57.0" layoutY="919.0" prefHeight="38.0" prefWidth="340.0" promptText="Balance" styleClass="field-decoration" stylesheets="@../design/design.css">
