                  <Font name="Arial Bold" size="20.0" />
               </font>
            </TextField>
            <ComboBox fx:id="cboxGender" layoutX="55.0" layoutY="411.0" prefHeight="38.0" prefWidth="340.0" promptText="Gender" styleClass="field-decoration" stylesheets="@../design/design.css" />
